<div class="container text-center">
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
        <div class="col bg-primary">
            <nav class="navbar bg-primary navbar-expand-lg" data-bs-theme="dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Loja Crud</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-link active" aria-current="page" href="/">inicio</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="col-1">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
        <div class="col bg-white">
            &nbsp;
        </div>
        <div class="col-1">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
        <div class="col bg-white">
            <p class="text-start fs-5">Consultar - Produtos cadastrados</p>
            <p class="text-start fs-6">Veja, exclua e edite todos os produtos cadastrados.</p>
            <p>
            <div class="container text-center">
                <div class="row bg-primary">
                    <div class="col text-light">
                        Produto
                    </div>
                    <div class="col text-light">
                        Marca
                    </div>
                    <div class="col text-light">
                        modelo
                    </div>
                   
                    <div class="col text-light">
                        Ações
                    </div>
                </div>
                <div class="row">
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                </div>
                {{#each post}}
                    {{#dataValues}}
                    <div class="row">
                        <div class="col">
                            {{produto}}
                        </div>
                        <div class="col">
                            {{marca}}
                        </div>
                        <div class="col">
                            {{modelo}}
                        </div>
                        <div class="col">
                            {{descricao}}
                        </div>
                        <div class="col">
                            {{palavras_chave}}
                        </div>
                        <div class="col">
                            <button type="button" class="btn btn-primary"><a href="/editar/{{id}}" style="color:inherit" style="margin-bottom: 0.5rem">Editar</a></button>
                            <button type="button" class="btn btn-primary"><a href="/excluir/{{id}}" style="color:inherit">Excluir</a></button>
                        </div>
                    </div>
                    {{/dataValues}}
                {{/each}}
            </div>
            </p>
        </div>
        <div class="col-1">
            &nbsp;
        </div>
    </div>
</div>